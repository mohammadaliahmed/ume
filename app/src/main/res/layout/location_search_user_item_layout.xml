<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="#fff">

    <android.support.v7.widget.CardView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/genderBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/custom_corners_blue"
        android:padding="3dp">


        <ImageView
            android:id="@+id/gender"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_male" />


        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/gender"
            android:text="22"
            android:textColor="#fff"
            android:textSize="10sp"
            android:textStyle="bold" />

        />
    </RelativeLayout>

    <ImageView
        android:id="@+id/userFlag"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@id/name"
        android:background="@drawable/flag_bg"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/flag_pakistan"
        android:visibility="visible" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:text="sdfsdfsdf"
        android:textColor="#000"
        android:textSize="15sp" />



    <TextView
        android:id="@+id/userDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_marginLeft="195dp"
        android:text="5km"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="1dp"
        android:background="#d6d6d6" />
</RelativeLayout>