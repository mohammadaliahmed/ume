<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectedItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_profile_plc"
        android:visibility="visible"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/balloon"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="1dp"
        android:text="3:04pm"
        android:textColor="#000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/messageDeleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/deleted_msg_bg"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Message was deleted"
        android:textColor="#fff"
        android:textStyle="italic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sticker"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/profile_image"
        android:src="@drawable/placeholder"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/balloon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/balloon_incoming_normal"
        android:padding="1dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/content"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="asdasd"
                android:inputType="textCapCharacters"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"

                android:layout_marginRight="10dp"
                android:background="@drawable/curved_edges_empty"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/translatedText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ededed"
                    android:padding="5dp"
                    android:text="fsdfsdfsdfsd" />

                <TextView
                    android:id="@+id/originalText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:padding="5dp"
                    android:text="fsdfsdfsdfsd" />

            </LinearLayout>


            <TextView
                android:id="@+id/msgtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:autoLink="web|phone|all"
                android:hint="asddsfsd"
                android:maxWidth="200dp"
                android:text="dsfsdfsdfsdfsd"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"

                android:visibility="gone">


                <ImageView
                    android:id="@+id/videoImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/videoPlayBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:padding="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_play"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/videoProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminateTint="@color/colorWhite"
                    android:visibility="gone" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/document"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/curved_edges"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"

                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:src="@drawable/ic_doc_black" />

                <TextView
                    android:id="@+id/documentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="18dp"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="8sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/documentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:lines="1"
                    android:text=""
                    android:textSize="12sp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/name"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/imgProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:visibility="gone" />

            <RelativeLayout

                android:id="@+id/audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/audioProgress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:id="@+id/playPause"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/play_btn"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="13dp"
                    android:maxHeight="1.5dp"
                    android:progressDrawable="@drawable/progess_fill"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/audioTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seek"
                    android:layout_marginLeft="40dp"
                    android:hint="0:05"
                    android:textColor="#000"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/msgStatus"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_sent"
            android:visibility="gone" />


    </RelativeLayout>


</RelativeLayout>