<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectedItem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_profile_plc"
        android:visibility="visible"
        app:civ_border_color="@android:color/transparent"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/messageDeleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/deleted_msg_bg"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:text="Message was deleted"
        android:textColor="#fff"
        android:textStyle="italic"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/sticker"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/profile_image"
        android:src="@drawable/placeholder"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/balloon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="100dp"
        android:layout_toRightOf="@id/profile_image"
        android:background="@drawable/balloon_incoming_normal"
        android:padding="1dp"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="asdasd"
                android:inputType="textCapCharacters"
                android:textColor="#000"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/msgtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:autoLink="web|phone|all"
                android:hint="asddsfsd"
                android:maxWidth="200dp"
                android:text="dsfsdfsdfsdfsd"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:visibility="gone"></ImageView>


            <ImageView
                android:id="@+id/document"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/curved_edges"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/file"
                android:visibility="gone" />



            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="8dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/imgProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:visibility="gone" />

            <RelativeLayout

                android:id="@+id/audio"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@id/name"
                android:layout_marginLeft="10dp"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/audioProgress"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp" />

                <ImageView
                    android:id="@+id/playPause"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/play_btn"
                    android:visibility="gone" />

                <SeekBar
                    android:id="@+id/seek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="13dp"
                    android:maxHeight="1.5dp"
                    android:progressDrawable="@drawable/progess_fill"
                    android:thumb="@drawable/seekbar_thumb" />

                <TextView
                    android:id="@+id/audioTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seek"
                    android:layout_marginLeft="40dp"
                    android:hint="0:05"
                    android:textColor="#000"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:text="3:04pm"
            android:textColor="#000"
            android:textSize="10sp" />


    </RelativeLayout>


</RelativeLayout>